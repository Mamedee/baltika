<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<Configuration status="WARN">
  <Appenders>
  	<Console name="Console" tagert="SYSTEM_OUT">
  		<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36}: %msg%%n" /> 
  	</Console>
  </Appenders>
  
  <Loggers>
  
  	<Logger name="de.mamede.baltika.controller" level="info"/>
  	
  	<Root level="error">
  		<AppenderRef ref="Console"/>
  	</Root>
  </Loggers>
 
</Configuration>